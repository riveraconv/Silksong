<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Silksong"
             x:Class="Silksong.App">
    <Application.Resources>
        <ResourceDictionary>
        <!-- Colores del tema -->
        <Color x:Key="AppBackgroundLight">#F5F5F5</Color>
        <Color x:Key="AppBackgroundDark">#1E1E1E</Color>
        <Color x:Key="AppPrimary">#FF5722</Color>
        <Color x:Key="AppAccent">#FFC107</Color>

        <!-- Estilos que se adaptan -->
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" 
                Value="{AppThemeBinding Light={StaticResource AppBackgroundLight},
                                        Dark={StaticResource AppBackgroundDark}}" />
        </Style>
        
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
