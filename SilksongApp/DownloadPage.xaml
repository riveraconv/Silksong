<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silksong.DownloadPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label 
                Text="⬇️ Paste your YouTube URL here ⬇️"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry x:Name="UrlEntry"
                   Placeholder="http://youtube.com/..."
                   PlaceholderColor="DarkGrey"
                   Keyboard="Url"
                   Margin="20,0,20,0"/>
                    
            <Button Text="🎵Download Audio🎵"
                    Padding="5,0,5,0"
                    FontSize="13"
                    TextColor="White"
                    WidthRequest="150"
                    Clicked="OnDownloadClicked"
                    BackgroundColor="Red"
                    Margin="0,130,0,100"
                    HorizontalOptions="Fill"/>

            <Label x:Name="StatusLabel"
                   Text="Progress of your download"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,25,0,0"
                   FontSize="14"/>
            
            <ProgressBar x:Name="DownloadProgressBar" 
                         Progress="0"
                         HeightRequest="0"
                         Margin="30,0,30,0"
                         BackgroundColor="DarkGrey"
                         ProgressColor="Red"/>

            <Label x:Name="ProgressLabel" 
                   Text="0%"
                   FontSize="16"
                   TextColor="Red"
                   HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>