<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silksong.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Imagen pendiente de cambios -->
            <Image  
                Source="portada_aplicacion.png"
                HeightRequest="185"
                Aspect="AspectFit"
                Margin="0,80,0,0"/>
   
            <!-- Titulo de la app -->
            <Label
                Text="Welcome to Silksong"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                Margin="0,0,0,0"/>
            
            <!-- Actual Version -->
            <Label
                Text="{Binding AppVersion}"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Red" />
            
            <!-- Descripcion -->
            <Label
                Text="Download your songs from videos fast and easy!"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                Margin="0,0,0,0"/>

            <Button
                x:Name="StartButton"
                Text="GO TO DOWNLOAD!"
                FontSize="14"
                TextColor="White"
                WidthRequest="150"
                Clicked="OnStartClicked"
                BackgroundColor="Red"
                Margin="0,50,0,0"
                Padding="0,0,0,0"
                HorizontalOptions="Fill">
                <Button.Shadow>
                <Shadow x:Name="ButtonShadow"
                            Brush="DarkRed"
                            Radius="20"
                            Opacity="0.7"/>
                </Button.Shadow>
            </Button>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0" Spacing="20">
                <Button Text="⚖️ Disclaimer" Clicked="OnDisclaimerClicked" FontSize="12" TextColor= "White" BackgroundColor="Transparent"/>
                <Button Text="ℹ️ Instructions" Clicked="OnInstructionsClicked" FontSize="12" TextColor= "White" BackgroundColor="Transparent"/>
            </StackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
